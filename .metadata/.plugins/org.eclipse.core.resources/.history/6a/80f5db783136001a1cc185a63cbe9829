package desafio_sprint_5;

import java.io.*;

public class arqs {

	public void escrever(pessoa p) throws IOException {
		//OutputStream fos = new FileOutputStream("Pessoas.txt");
        //Writer osw = new OutputStreamWriter(fos);
        //BufferedWriter bw = new BufferedWriter(osw);
		
		BufferedWriter bw = new BufferedWriter(new FileWriter("Pessoas.txt"));

        bw.write(p.getCodigo() + ";" + p.getNome() + ";" + p.getEndereco() + ";" + p.getIdade() +"\n");

        bw.close();
	}
	
	public void ler() {
		
	}
}
